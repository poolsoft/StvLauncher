<?xml version="1.0" encoding="utf-8"?>
<com.stv.plugin.demo.widget.HeaderVideoContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_player_bg"
    android:paddingBottom="18dip"
    android:paddingLeft="22dip"
    android:paddingRight="21dip"
    android:paddingTop="4dip">

    <SurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressbar"
        android:layout_centerHorizontal="true"
        android:textSize="8sp"
        android:visibility="gone" />

</com.stv.plugin.demo.widget.HeaderVideoContainer>
